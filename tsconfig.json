{
  "extends": "@sindresorhus/tsconfig",
  "compilerOptions": {
    "declaration": true,
    "sourceMap": true,
    "target": "ES2021",
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/.store@types",
      "./types"
    ],
    "baseUrl": ".",
    "paths": {
      "@pet-shop-api/*": ["shared/*"]
    }
  },
  "references": [
    { "path": "./packages/users" },
    { "path": "./packages/orders" },
    { "path": "./packages/products" },
    { "path": "./shared/repositories" },
    { "path": "./shared/config" }
  ]
}
