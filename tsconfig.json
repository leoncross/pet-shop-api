{
  "extends": "@sindresorhus/tsconfig",
  "compilerOptions": {
    "moduleResolution": "nodenext",
    "declaration": true,
    "sourceMap": true,
    "target": "ES2022",
    "outDir": "./dist",
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/.store@types",
      "./types"
    ],
    "baseUrl": ".",
  },
  "include": [ "./index.ts", "./packages/**/*", "./shared/**/*" ],
  "references": [
    { "path": "./packages/users" },
    { "path": "./packages/orders" },
    { "path": "./packages/products" },
    { "path": "./shared/config" },
    { "path": "./shared/core" },
    { "path": "./shared/common" }
  ]
}
