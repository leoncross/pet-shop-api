{
  "name": "@pet-shop-api/source",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "lint": "prettier --check 'packages/**/*.ts' 'shared/**/*.ts'",
    "lint:fix": "prettier --write 'packages/**/*.ts' 'shared/**/*.ts'",
    "test": "yarn workspaces run test",
    "build": "yarn workspaces run build",
    "bundle": "bash ./scripts/bundle-lambdas.sh",
    "deploy:dev": "yarn run build && yarn run bundle && bash ./scripts/deploy.sh dev",
    "deploy:prod": "yarn run build && yarn run bundle && bash ./scripts/deploy.sh prod",
    "deploy:local": "yarn run build && yarn run bundle && docker-compose -f ./infrastructure/local/docker-compose.yml up --force-recreate",
    "start:local": "tsc && node dist/index.js"
  },
  "author": "leoncross <leon@lscross.co.uk>",
  "license": "ISC",
  "devDependencies": {
    "@sindresorhus/tsconfig": "^3.0.1",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.4.8",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "express": "^4.18.2",
    "husky": "^8.0.3",
    "jest": "^29.6.3",
    "prettier": "^3.0.2",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.3"
  },
  "workspaces": {
    "packages": [
      "shared/*",
      "packages/*"
    ]
  },
  "dependencies": {
    "@types/express": "^4.17.17",
    "express": "^4.18.2"
  },
  "engines": {
    "node": ">=18",
    "yarn": ">=1.22.0",
    "npm": "Please use yarn"
  },
  "volta": {
    "node": "18.15.0",
    "yarn": "1.22.19"
  }
}
